{
  "name": "personal-dev-store",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "turbo start",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "clean": "turbo clean",
    "db:generate": "cd packages/db && pnpm prisma generate",
    "db:migrate": "cd packages/db && pnpm prisma migrate dev",
    "db:push": "cd packages/db && pnpm prisma db push",
    "db:seed": "cd packages/db && pnpm tsx seed.ts",
    "db:studio": "cd packages/db && pnpm prisma studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "deploy:staging": "node scripts/deploy.js staging",
    "deploy:production": "node scripts/deploy.js production",
    "vercel-build": "turbo build --filter=web",
    "vercel-dev": "turbo dev --filter=web"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "prettier": "^3.2.5",
    "turbo": "^1.12.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": "18.x",
    "pnpm": "8.x"
  },
  "packageManager": "pnpm@8.15.0"
}
