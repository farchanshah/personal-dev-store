{
  "name": "personal-dev-store",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "turbo start",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "clean": "turbo clean",
    "db:generate": "cd packages/db && npm run generate",
    "db:migrate": "cd packages/db && npm run migrate",
    "db:push": "cd packages/db && npm run push",
    "db:seed": "cd packages/db && npm run seed",
    "db:studio": "cd packages/db && npm run studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "deploy:staging": "node scripts/deploy.js staging",
    "deploy:production": "node scripts/deploy.js production",
    "vercel-build": "cd apps/web && npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "prettier": "^3.2.5",
    "turbo": "^1.12.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": "24.x",
    "npm": ">=9.0.0"
  }
}
